<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ab2fc4"
    tools:context="com.wf.bci.KeyBoardActivity">

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_border"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:horizontalSpacing="80dp"
        android:verticalSpacing="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"

        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/digit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="1"

            android:text="1" />

        <Button
            android:id="@+id/digit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="3dp"
            android:tag="2"
            android:text="2"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/digit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="3"
            android:textSize="@dimen/font_size"
            android:text="3" />

        <Button
            android:id="@+id/digit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="4"
            android:text="4" />
        <Button
            android:id="@+id/digit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="5"
            android:text="5" />

        <Button
            android:id="@+id/digit6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="6"
            android:text="6" />

        <Button
            android:id="@+id/digit7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="7"
            android:text="7" />
        <Button
            android:id="@+id/digit8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="8"
            android:text="8" />

        <Button
            android:id="@+id/digit9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:tag="9"
            android:text="9" />

        <Button
            android:id="@+id/digit0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:tag="0"
            android:text="0"
            />



    </GridLayout>


    <Button
        android:id="@+id/selectDigit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectDigitClicked"
        android:textSize="@dimen/font_size"
        android:layout_gravity="center_horizontal"
        android:text="SELECT"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/gridLayout"
        android:layout_alignRight="@+id/gridLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: "
        android:textSize="@dimen/font_size"
        android:layout_below="@+id/ib_close"
        android:layout_alignParentLeft="true"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/amountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="@dimen/font_size"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5" />

</RelativeLayout>
